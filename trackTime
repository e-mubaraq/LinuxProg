#!/bin/bash

st=$1
user=`logname`
echo USER: $user

if [ "$st" != "start" ] && [ "$st" != "stop" ]
then
    echo "Please enter start or stop"

else
    if [ "$st" = "start" ]
    then
        echo "Start tracking time"
        startTime=`date +%s`
    else
        echo "Stop tracking time"
        stopTime=`date +%s`
        timeSpent=$(( $stopTime - $startTime ))
        echo $timeSpent
    fi
fi

